<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get crud</title>
</head>
<style>
    table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
    }

    td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
    }

    tr:nth-child(even) {
    background-color: #dddddd;
    }

    .btn-edit, .btn-delete{
        background: orange;
        outline: none;
        border: none;
        height: 25px;
        width: 60px;
        cursor: pointer;
        border-radius: 30px;
    }

    .btn-edit:hover{
        background-color: grey;
        color: black;
    }

    .btn-delete:hover{
        background-color: red;
        color: #fff;
    }
</style>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                <a href="/edit-crud?id= <%=dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                <button class="btn-delete" type="button">Delete</button>
              </td>
            </tr>
         <% } %>

      </table>
</body>
</html>